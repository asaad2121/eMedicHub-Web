{
  "name": "e-medic-hub-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:prod": "ng build -c production",
    "serve:angular": "http-server ./dist/eMedicHub-Web/browser -p 4200 -S -C ./ssl/cert.pem -K ./ssl/key.pem",
    "start:api": "cross-env ENVIRONMENT=prod node ../eMedicHub-API/index.js",
    "prod": "npm run build:prod && concurrently \"npm:serve:angular\" \"npm:start:api\""
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.1.5",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.1.5",
    "@angular/material-moment-adapter": "^20.2.3",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "moment": "^2.30.1",
    "rxjs": "~7.8.0",
    "tmp": "^0.2.5",
    "tslib": "^2.3.0",
    "vite": "^7.1.7",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.4",
    "@angular/cli": "^20.1.4",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "less": "^4.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.2"
  }
}
